@model List<UserViewModel>

@{
    ViewBag.Title = "User Index";
    int counter = 0;}
<section class="grid grid-cols-3"></section>
    @foreach(var user in Model) {
        <section class="border-gray-500 border-2 p-6 m-5 rounded-lg">
            @{int disp = counter + 1;}
            @disp: @user.FirstName @user.LastName <a asp-controller="Users" asp-action="Edit" asp-route-id=@counter>Edit</a>
            <form asp-controller="Users" asp-action="Delete" asp-route-id=@counter method="post">
                <button onclick="return confirm('You are about to delete @user.FirstName @user.LastName. Are you sure you want to do this?');">X</button>
            </form>
            @{counter++;}
        </section>
    }
</section>

@*<section class="flex flex-wrap">
    @foreach(var user in Model) {
        <div class="w-1/3">
