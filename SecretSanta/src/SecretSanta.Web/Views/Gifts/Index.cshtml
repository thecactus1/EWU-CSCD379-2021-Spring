@model List<GiftViewModel>

<section class="flex flex-wrap mb-6">
    @foreach(var giftViewModel in Model) {
        <section class="w-full sm:w-1/3">
            <a asp-action="Edit" asp-route-id=@giftViewModel.Id>
                <section class="border-gray-500 hover:shadow-xl border-2 p-6 m-5 rounded-xl flex flex-row justify-between">
                    <div class="inline-block">@giftViewModel.Title</div>
                    <form class="inline-block -mt-5 -mr-3" asp-action="Delete" asp-route-id=@giftViewModel.Id method="post">
                        <button class="-mt-6" onclick="return confirm('Are you sure you want to delete @giftViewModel.Title?');"><i class="fas fa-trash text-gray-700 hover:text-red-700"></i></button>
                    </form>
                </section>
            </a>
        </section>
    }
</section>

<a class="border-2 bg-green-400 border-green-800 hover:bg-green-600 py-2 px-4 rounded-xl" asp-action="Create">Create</a>