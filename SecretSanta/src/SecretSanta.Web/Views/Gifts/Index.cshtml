<section class="flex flex-wrap mb-6" x-data="SecretSanta.setupGifts()" x-init="mounted()">
    <template x-for="(currentGift, index) in gifts" :key="index">
        <section class="w-full sm:w-1/3">
            <a :href="`https://localhost:5001/gifts/edit/${currentGift.id}`">
                <section class="border-gray-500 hover:shadow-xl border-2 p-6 m-5 rounded-xl flex flex-row justify-between">
                    <div class="inline-block"><span x-text="currentGift.title"></span></div>
                    <button class="-mt-6" @@click.prevent="deleteGift(currentGift)"><i class="fas fa-trash text-gray-700 hover:text-red-700"></i></button>
                </section>
            </a>
        </section>
    </template>
</section>
<a class="border-2 bg-green-400 border-green-800 hover:bg-green-600 py-2 px-4 rounded-xl" asp-action="Create">Create Gift</a>