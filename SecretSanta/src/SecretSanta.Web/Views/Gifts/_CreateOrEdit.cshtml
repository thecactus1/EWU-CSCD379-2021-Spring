<div class="mb-6">
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div>
            <label class="text-gray-500 font-bold text-right" for="Title">Title</label>
            <input class="w-full border-b-2 border-green-300 focus:border-green-600 focus:ring-transparent focus:outline-none" type="text" id="Title" name="Title" x-model="gift.title" />
        </div>
        <div>
            <label class="text-gray-500 font-bold text-right" for="Description">Description</label>
            <input class="w-full border-b-2 border-green-300 focus:border-green-600 focus:ring-transparent focus:outline-none" type="text" id="Description" name="Description" x-model="gift.description" />
        </div>
        <div>
            <label class="text-gray-500 font-bold text-right" for="Url">Url</label>
            <input class="w-full border-b-2 border-green-300 focus:border-green-600 focus:ring-transparent focus:outline-none" type="text" id="Url" name="Url" x-model="gift.url" />
        </div>
        <div>
            <label class="text-gray-500 font-bold text-right" for="Priority">Priority</label>
            <input class="w-full border-b-2 border-green-300 focus:border-green-600 focus:ring-transparent focus:outline-none" type="text" id="Priority" name="Priority" x-model="gift.priority" />
        </div>
        <div>
            <select x-model="selectedUserId" class="w-full sm:w-1/3">
                <template x-for="user in allUsers" :key="user">
                    <option key="user.id" :value="user.id" x-text="`${user.firstName} ${user.lastName}`"></option>
                </template>
            </select>
        </div>
    </div>
</div>