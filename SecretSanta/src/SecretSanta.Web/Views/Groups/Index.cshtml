@model List<GroupViewModel>

@{
    int counter = 0;
    ViewBag.Title = "Group Index";
}

@foreach(var groupViewModel in Model) {
    <section>
        @groupViewModel.Name <a asp-action="Edit" asp-route-id=@counter>Edit</a><form asp-action="Delete" asp-route-id=@counter method="post"><button>X</button></form>
        @{counter++;}
    </section>
}
