@model GroupViewModel
@{ViewBag.Title = "Group Edit";}

<section class="m-6">
    <form asp-controller="Groups" asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        @await Html.PartialAsync("_CreateOrEdit")
        <button>Update</button>
        <a asp-controller="Groups" asp-action="Index">Cancel</a>
    </form>
</section>